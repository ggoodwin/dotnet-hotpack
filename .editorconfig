*# EditorConfig is awesome: https://EditorConfig.org*

*# top-most EditorConfig file*
root = true

*# Don't use tabs for indentation.*
[*]
indent_style = space
trim_trailing_whitespace = true

*# JSON files*
[*.json]
indent_size = 2

*# Powershell files*
[*.ps1]
indent_size = 2

*# Shell script files*
[*.sh]
end_of_line = lf
indent_size = 2

# Javascript files*
[*.{js,ts,jsx,tsx,cjs,mjs}]
indent_size = 2

# Python files*
[*.py]
indent_size = 2

# Rust files*
[*.rs]
indent_size = 2

# Toml files*
[*.toml]
indent_size = 2

# Astro files*
[*.astro]
indent_size = 2

# Markdown files*
[*.{md,mdx,markdown}]
indent_size = 2

# Yaml files*
[*.{yml,yaml}]
indent_size = 2

# HTML files*
[*.{html,htm}]
indent_size = 2
